{
  "name": "nextjs-static-blog",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "prebuild": "npm run generate",
    "generate": "npm run generate:metadata && npm run generate:images",
    "generate:metadata": "tsx scripts/generate-metadata.ts",
    "generate:sitemap": "tsx scripts/generate-sitemap.ts",
    "generate:images": "tsx scripts/optimise-images.ts",
    "postbuild": "npm run generate:sitemap",
    "build": "next build",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "start": "next start"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.555.0",
    "next": "^16.0.5",
